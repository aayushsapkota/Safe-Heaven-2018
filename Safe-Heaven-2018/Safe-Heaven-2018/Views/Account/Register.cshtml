@model Safe_Heaven_2018.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="fancy-input__wrap">
    <div class="container">
        <form action="/" method="post" class="fancy-input__form">
            <h1>@ViewBag.Title</h1>

            <!--  Fancy inputs  -->
            <div class="fancy-input">
                <div class="form-control">
                    <label class="label">Full name</label>
                    <input type="text" placeholder="John Awesome">
                </div>
                <div class="form-control">
                    <label class="label">Username</label>
                    <input type="text" placeholder="awesome011">
                </div>
                <div class="form-control">
                    <label class="label">Email address</label>
                    <input type="email" placeholder="John Awesome">
                </div>
                <div class="form-control">
                    <label class="label">Password</label>
                    <input type="password" placeholder="Password">
                </div>
                <div class="form-control">
                    <label class="label">Confirm Password</label>
                    <input type="password" placeholder="Password">
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn" value="Register" />
                </div>
            </div>
        </form>
    </div>

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
