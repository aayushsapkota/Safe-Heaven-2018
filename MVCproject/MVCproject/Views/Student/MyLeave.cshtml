@model MVCproject.Models.Student
@{
    ViewBag.Title = "MyLeave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Form</h2>

@using (Html.BeginForm("Create", "Student"))
{
<div class="form-group">
    <div>
        @Html.LabelFor(m => m.StudentID)
        @Html.TextBoxFor(m => m.StudentID, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsFullTimeStudent) Is Fultime Student?
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor(m=> m.campus)
        
        <select class="form-control">
            <option value="Cas">Casaurina</option>
            <option value="Palmerston">Palmerston</option>
        </select>
    </div>
    <div class="form-group">
        @Html.LabelFor(m=> m.EnrolledSubject)
    
        <select class="form-control">
            <option value="PRT455">PRT455</option>
            <option value="PRT456">PRT456</option>
            <option value="PRT547">PRT457</option>
        </select>

    </div>
    <input type="button" name="button" value="Submit" />


</div>


             }






